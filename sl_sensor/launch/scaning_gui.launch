<launch>

  <arg name="colour_point_cloud" doc="Boolean on whether input point cloud is in colour" default="false" />
  <node name="rqt_gui" pkg="rqt_gui" type="rqt_gui" args="--perspective-file $(find sl_sensor)/rqt/scan_gui.perspective"/>

  <group if="$(arg colour_point_cloud)">
    <node launch-prefix="nice" pkg="rviz" type="rviz" name="rviz" args="-d $(find sl_sensor)/rviz/scan_rqt_gui_colour.rviz" />	  
  </group>
  <group unless="$(arg colour_point_cloud)">
    <node launch-prefix="nice" pkg="rviz" type="rviz" name="rviz" args="-d $(find sl_sensor)/rviz/scan_rqt_gui_monochrome.rviz" />	  
  </group>

</launch>
