<launch>

<arg name="frame_id" doc="sl_sensor's frame id" default="sl_sensor" />
<arg name="number_cameras" doc="Number Cameras" default="1" />
<arg name="visualise_point_cloud" doc="Whether to visualise point clouds" default="true" />
<arg name="save_point_cloud" doc="Save point clouds" default="true" />
<arg name="projector_yaml_directory" doc="projector_yaml_directory" default="$(find sl_sensor_projector)/projector_yaml/lightcrafter4500.yaml" />
<arg name="calibration_filename" doc="calibration xml file" default="$(find sl_sensor_calibration)/calibration_files/cam1_proj_fixed_new2.xml" />

<node pkg="tf" type="static_transform_publisher" name="map_to_sl_sensor"  args="0 0 0 0 0 0 1 map $(arg frame_id) 10" />

<include file="$(find sl_sensor_projector)/launch/lightcrafter_4500_projector.launch" />

<node pkg="nodelet" type="nodelet" name="standalone_nodelet"  args="manager" output="screen">
  <param name="num_worker_threads" value="10" />
</node>

<node pkg="nodelet" type="nodelet" name="image_synchroniser" args="load sl_sensor_image_acquisition/ImageSynchroniserNodelet standalone_nodelet" output="screen">
  <param name="projector_topic" type="string" value="/versavis/projector/image_time" />
  <param name="output_topic" type="string" value="/image_synchroniser/grouped_images" />
  <param name="frame_id" type="string" value="$(arg frame_id)" />
  <param name="lower_bound_tol" type="double" value="0.0166667" />
  <param name="upper_bound_tol" type="double" value="0.0166667" />
  <param name="image_trigger_period" type="double" value="0.03333333" />
  <param name="projector_yaml_directory" type="string" value="$(arg projector_yaml_directory)"/>
  <param name="projector_service_name" type="string" value="/command_projector"/>    
  <param name="image_topics" type="string" value="/versavis/cam1/image_raw" />
</node>		  

<node pkg="nodelet" type="nodelet" name="decoder" args="load sl_sensor_codec/DecoderNodelet standalone_nodelet" output="screen">
  <param name="input_topic" type="string" value="/image_synchroniser/grouped_images" />
  <param name="output_topic" type="string" value="/image_synchroniser/decoded_images" />
  <param name="projector_yaml_directory" type="string" value="$(arg projector_yaml_directory)" /> 
  <param name="direction" type="string" value="horizontal" />
  <param name="decoder_name" type="string" value="PhaseShiftWithTpu" />
  <param name="number_cameras" type="int" value="$(arg number_cameras)" />
  <param name="number_phases" type="int" value="12" />
  <param name="shading_threshold" type="int" value="55" />
</node>		  

<node pkg="nodelet" type="nodelet" name="triangulator" args="load sl_sensor_reconstruction/TriangulatorNodelet standalone_nodelet" output="screen">
  <param name="input_topic" type="string" value="/image_synchroniser/decoded_images" />
  <param name="output_topic" type="string" value="/triangulator/point_cloud" />
  <param name="calibration_file" type="string" value="$(arg calibration_filename)" />
  <param name="number_cameras" type="int" value="$(arg number_cameras)" />
  <param name="apply_crop_box" type="bool" value="true"/>
  <param name="crop_box_x_min" type="double" value="-500.0" />
  <param name="crop_box_y_min" type="double" value="-500.0" />
  <param name="crop_box_z_min" type="double" value="0.0" />
  <param name="crop_box_x_max" type="double" value="500.0" />
  <param name="crop_box_y_max" type="double" value="500.0" />
  <param name="crop_box_z_max" type="double" value="2000.0" />  
</node>		  

<group if="$(arg visualise_point_cloud)">
  <node launch-prefix="nice" pkg="rviz" type="rviz" name="rviz" args="-d $(find sl_sensor)/rviz/show_pc.rviz" />
  <?ignore
  <node pkg="nodelet" type="nodelet" name="visualiser" args="load sl_sensor_visualise/ShowPointCloudNodelet standalone_nodelet" output="screen">
    <param name="input_topic" type="string" value="/triangulator/point_cloud" />
    <param name="screen_title" type="string" value="Point Cloud Visualiser" />
    <param name="calibration_filename" type="string" value="$(arg calibration_filename)" />
  </node>	
  ?>	  
</group>

<group if="$(arg save_point_cloud)">
  <node pkg="nodelet" type="nodelet" name="visualiser" args="load sl_sensor_reconstruction/PointCloudLoggerNodelet standalone_nodelet" output="screen">
    <param name="input_topic" type="string" value="/triangulator/point_cloud" />
    <param name="save_folder" type="string" value="/home/ltf/Desktop/saved_pc/" />
    <param name="header" type="string" value="pc" />
  </node>	
</group>

</launch>