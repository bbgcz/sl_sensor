<launch>

  <!-- Set up visualisation -->
  <node pkg="tf" type="static_transform_publisher" name="camera_init_to_map"  args="0 0 0 0 0 0 1 map my_frame 10" />

  <arg name="rviz" default="true" />
  <node pkg="sl_sensor_visualise" type="pose_stamped_to_path_node" name="pose_stamped_to_path_node" output="screen">
    <param name="subscribe_topic" value="registered_pose" />
    <param name="publish_topic" value="path" />
  </node>

  <group if="$(arg rviz)">
    <node launch-prefix="nice" pkg="rviz" type="rviz" name="rviz" args="-d $(find sl_sensor_visualise)/rviz/pairwise_registration.rviz" />
  </group>

  <!-- File information -->
  <param name="stitch_pc_directory" type="string" value="/home/ltf/ma_thesis_submission_dataset/pairwise_registration_demo/pc/" /> <!-- Folder where the point clouds that will ultimately be registered and saved -->
  <param name="registration_pc_directory" type="string" value="/home/ltf/ma_thesis_submission_dataset/pairwise_registration_demo/pc/" /> <!-- Folder where the point clouds will be used for transformation estimation -->
  <param name="output_pc_directory" type="string" value="/home/ltf/ma_thesis_submission_dataset/pairwise_registration_demo/pc_output/" /> <!-- Folder where registered point clouds will be saved -->
  <param name="relative_pose_directory" type="string" value="/home/ltf/ma_thesis_submission_dataset/pairwise_registration_demo/relative_pose.csv" /> <!-- This is an input file of initial guess transforms -->
  <param name="absolute_pose_directory" type="string" value="/home/ltf/ma_thesis_submission_dataset/pairwise_registration_demo/registered_pc_pose.csv" /> <!-- This is an output file of absolute poses -->
  <param name="input_pc_file_format" type="string" value=".ply" />
  <param name="output_pc_file_format" type="string" value=".pcd" />
  
  <!-- Setup ICP Registration-->
  <param name="pc_algo" type="string" value="lpm_icp" />
  <param name="leafsize" type="double" value="0.0005" /> <!-- subsmpling method is specified in the yaml file -->
  <param name="yaml_directory" type="string" value="$(find sl_sensor_registration)/lpm_yaml/pairwise_registration_demo.yaml" />
  <param name="save_registered_pc" type="bool" value="1" />
  <node pkg="sl_sensor_registration" type="pairwise_registration_node" name="pairwise_registration_node" output="screen"/>
  

</launch>
